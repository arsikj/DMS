<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/e_l_detail"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/exercise_item_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:padding="5dp" />

        <TextView
            android:id="@+id/exercise_item_duration"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:padding="5dp" />
    </LinearLayout>

    <View
        android:id="@+id/e_l_devider"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/e_l_detail"
        android:background="@color/red" />

    <TextView
        android:id="@+id/exercise_item_type"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_toLeftOf="@id/e_l_devider"
        android:fontFamily="Bookman Old Style"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        android:textSize="40sp" />

</RelativeLayout>